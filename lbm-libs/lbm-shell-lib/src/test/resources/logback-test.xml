<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- shutdown hook -->
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
    <!-- std.out appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %X{Pass-Through-Id} [%thread] %-5level %logger - %msg%n
            </pattern>
        </encoder>
    </appender>
    <!-- root logger -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.apache.kafka.clients" level="error"/>
    <logger name="org.apache.kafka.common.utils.AppInfoParser" level="error"/>
    <logger name="org.apache.kafka.streams.state.internals" level="error"/>
    <logger name="org.apache.kafka.streams.processor.internals" level="error"/>
    <logger name="io.lettuce.core.protocol.ConnectionWatchdog" level="error"/>
</configuration>